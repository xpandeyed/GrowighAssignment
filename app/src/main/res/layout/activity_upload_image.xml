<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ablUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:navigationIcon="@drawable/round_arrow_back_24" >
            <TextView
                android:layout_width="wrap_content"
                android:text="Upload Image"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"/>

        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:src="@mipmap/ic_launcher"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/ablUploadImage" />

    <TextView
        android:id="@+id/bSelectImage"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/white_back_with_stroke"
        android:textSize="20sp"
        android:text="Select Image"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ivImage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="20dp"
        android:background="@drawable/gradient_background_with_corners"
        android:gravity="center"
        android:text="Upload Image"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bSelectImage" />

</androidx.constraintlayout.widget.ConstraintLayout>