<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/ablUploadImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <Toolbar
            android:layout_width="match_parent"
            android:title="Upload Image"
            android:navigationIcon="@drawable/round_arrow_back_24"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/ablUploadImage" />

    <Button
        android:id="@+id/bSelectImage"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:text="Select Image"
        android:textColor="@color/black"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivImage" />

    <Button
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/gradient_background"
        android:text="Upload Image"
        app:layout_constraintTop_toBottomOf="@id/bSelectImage"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>